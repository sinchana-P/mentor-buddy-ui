{
  "version": 2,
  "name": "mentor-buddy-ui",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://mentor-buddy-backend.onrender.com"
  },
  "crons": [
    {
      "path": "/api/cron/keep-alive",
      "schedule": "*/14 * * * *"
    }
  ]
}